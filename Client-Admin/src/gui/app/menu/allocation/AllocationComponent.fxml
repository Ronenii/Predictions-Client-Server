         <children>
            <Button fx:id="buttonDeny" mnemonicParsing="false" onAction="#onDenyClicked" text="Deny" />
            <Button fx:id="buttonAccept" mnemonicParsing="false" onAction="#onAcceptClicked" text="Accept" />
         </children>
      </HBox>
   </children>
</GridPane>
