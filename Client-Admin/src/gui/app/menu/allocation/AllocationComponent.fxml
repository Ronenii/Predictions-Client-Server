                  <TableColumn prefWidth="60.0" text="Tokens" />
                  <TableColumn prefWidth="180.0" text="Conditions" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
