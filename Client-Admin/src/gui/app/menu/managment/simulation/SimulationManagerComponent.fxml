<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
  <columnConstraints>
    <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="10.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
      <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
    <RowConstraints minHeight="-Infinity" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
      <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
  </rowConstraints>
   <children>
      <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
         <children>
            <TextField id="tf-Header-FilePath" fx:id="pathTF" editable="false" onAction="#loadFileTextFieldListener" onMouseEntered="#resetTextOnMouseEnteredTextFieldListener" onMouseExited="#resetTextOnMouseExitTextFieldListener" HBox.hgrow="ALWAYS" />
            <Button id="btn-Header-LoadFile" fx:id="loadFileBTN" mnemonicParsing="false" onAction="#loadFileButtonActionListener" text="Load file" />
         </children>
      </HBox>
      <ListView fx:id="listViewSimulations" focusTraversable="false" onContextMenuRequested="#onSimulationSelected" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </children>
</GridPane>
